{% extends 'base.html.twig' %}


{% block body %}
<div class="container-fluid col-md-8 text-center">
    <h2 class="text text-success mb-2">Course List</h2>
    <a class="btn btn-danger" href="{{ path('course_add')}}">Add Course</a>
    <table class="table table-hover mt-3">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        {% for course in course %}
            <tr>
                <td>{{course.id}}</td>
                <td>                    
                    <a href="{{path('course_detail',{'id':course.id})}}">
                        {{course.name}}
                    </a>
                </td>
                <td>{{course.dateStart | date('d/m/Y') }}</td>
                <td>{{course.dateEnd | date('d/m/Y') }}</td>
                <td>{{course.description}}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('course_edit', {'id' : course.id }) }}">EDIT</a>
                    <a class="btn btn-outline-warning" 
                    href="{{ path('course_delete', {'id' : course.id}) }}"
                    onclick="return confirm('Do you want to delete this course ?');"
                    >DELETE</a>
                </td>
            </tr>

        {% endfor %}

    </table>
</div>
{% endblock %}
