<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
        and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    {% block nav %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                    <a class="navbar-brand" aria-current="page" href="{{ path('home')}}">Home</a>
                    </li>
                    
                    <li class="nav-item">
                    <a class="navbar-brand" href="{{ path('student_index') }}">Student List</a>
                    </li>

                    <li class="nav-item">
                        <a class="navbar-brand" href="{{ path('course_index') }}">Course List</a>
                    </li>

                    <li class="nav-item">
                        <a class="navbar-brand" href="{{ path('mark_index') }}">Mark Report</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="navbar-brand" href="{{ path('subject_index') }}">Subject</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="navbar-brand" href="{{ path('subject_index') }}">Semester</a>
                    </li>
                    
                    
                    {# <li class="nav-item">
                    <a class="navbar-brand">Disabled</a>
                    </li> #}
                </ul>
                {# <form class="d-flex" action="{{ path('student_search') }}" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form> #}
                </div>
            </div>
        </nav>


        {% block flash %}
            {# show flash message #}
            <div class="container-md col-md-5 text-center">
                {% for message in app.session.flashBag.get('Success') %}     
                    <p class="alert alert-success">{{ message }}</p>
                {% endfor %}
                {% for message in app.session.flashBag.get('Error') %}
                    <p class="alert alert-danger">{{ message }}</p>
                {% endfor %}
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
    {% endblock %}
    </body>
</html>
