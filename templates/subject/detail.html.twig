{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
    <h2 class="text text-primary mb-3">{{subject.name}}</h2>
    <div class="row">
        <div class="col">
            <a href="{{path('subject_detail',{'id':subject.id})}}">
                        <img src="{{subject.image}}" width=120 height=120>
            </a>
        </div>
        <div>
                {% if subject.teacher != null %}
                <a class="text text-success text-decoration-none" href="{{ path('course_detail', {'id' : subject.teacher.id })}}">
                            {{ subject.teacher.name }}
                </a>              
        {% endif %}
        </div>

        <div class="col">
            <h6 class="text-info">{{subject.description}}</h6>
            <h4>Subject List</h4>  
            {% if subject.marks != null %}
                {% for mark in subject.marks %}
                    <a class="text text-warning" href="{{path('mark_detail', {'id': mark.id})}}">{{mark.assignment1}}</a>
                    <br>
                {% endfor %}   
            {% endif %} 
        </div>
    </div>
</div>
{% endblock %}