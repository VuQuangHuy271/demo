{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
    <h2 class="text text-success mb-2">classroom List</h2>
    <form class="d-flex" action="{{ path('classroom_search') }}" method="post">
        <input class="form-control me-2" type="search" name="name" id="" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form> 

        <a class="btn btn-primary mb-3" href="{{ path('classroom_add')}}">Add classroom</a> 
    <table class="table table-hover mt-3">
        <tr>
            <th>Number</th>
            <th>classroom Name</th>
            <th>Actions</th>
        </tr>
        <script language = "JavaScript">
                    var num = 1
        </script>
        {% for classroom in classroom %}      
            <tr>
                <td>
                    <script language = "JavaScript">
                    document.write(num++);
                    </script>
                </td>
                <td>
                    <a style="text-decoration:none" href="{{path ('classroom_detail',{'id':classroom.id})}}">
                        {{classroom.name}}
                    </a>
                </td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('classroom_edit', {'id' : classroom.id }) }}">EDIT</a>
                    <a class="btn btn-outline-warning" 
                    href="{{ path('classroom_delete', {'id' : classroom.id}) }}"
                    onclick="return confirm('Do you want to delete this classroom ?');"
                    >DELETE</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
