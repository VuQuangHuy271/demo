{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
        <h2 class="text text-success mb-2">Student List</h2>
    <table class="table table-hover mt-3">
        <tr>
            <th>ID</th>
            <th>Student Name</th>
            <th>Gender</th>
            <th>Date Of Birth</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        {% for student in student %}
            <tr>
                <td>{{student.id}}</td>
                <td>
                    <a href="{{path('student_detail',{'id':student.id})}}">
                        {{student.name}}
                    </a>
                </td>

                {# <td>{{student.name}}</td> #}
                <td>{{student.gender}}</td>
                <td>{{student.dateOfBirth | date('d/m/Y') }}</td>
                <td>{{student.phone}}</td>
                <td>{{student.email}}</td>
                <td>
                    <img src="{{student.image}}" width="100" height="100">
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('student_edit', {'id' : student.id }) }}">EDIT</a>
                    <a class="btn btn-danger" 
                    href="{{ path('student_delete', {'id' : student.id}) }}"
                    onclick="return confirm('Do you want to delete this student ?');"
                    >DELETE</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
