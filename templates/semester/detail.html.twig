{% extends "base.html.twig" %}

{% block body %}
<div class="container-fluid col-md-8 text-center">
    <h2 class="text text-primary mb-3">{{semester.name}}</h2>
    <div class="row">
        {# <div class="col">
            <a href="{{path('semester_detail',{'id':semester.id})}}">
                        {{semester.name}}
            </a>
        </div> #}
        <div class="col">
            <h6 class="text-info">Date Start: {{semester.dateStart | date('m-d-Y')}}</h6>
            <h6 class="text-info">Date End: {{semester.dateEnd | date('m-d-Y')}}</h6>
            <h4>Semester List</h4>  
            {% if semester.marks != null %}
                {% for mark in semester.marks %}
                    <a class="text text-warning" href="{{path('mark_detail', {'id': mark.id})}}">{{mark.assignment1}}</a>
                    <br>
                {% endfor %}   
            {% endif %} 
        </div>
    </div>
</div>
{% endblock %}